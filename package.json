{
    "name": "client-server-react-template",
    "version": "1.0.0",
    "description": "React template project client/server side ",
    "main": "build/deploy.sh",
    "private": false,
    "scripts": {
        "client-watch": "cross-env NODE_ENV=development webpack-dev-server --inline --hot",
        "client-build": "webpack --progress --hide-modules",
        "server-watch": "babel-node server/server.js  | ./node_modules/.bin/bunyan",
        "server-build": "rm -rf server-dist && babel server -d server-dist",
        "postinstall": "bash build/deploy.sh",
        "babel-node": "babel-node",
        "start": "nodemon --exec npm run babel-node -- server/server.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mrstalon/react-server-client-template.git"
    },
    "author": "Artem Zekov",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mrstalon/react-server-client-template.git/issues"
    },
    "homepage": "https://github.com/mrstalon/react-server-client-template.git#readme",
    "engines": {
        "node": ">= 4.0.0",
        "npm": ">= 3.0.0"
    },
    "dependencies": {
        "axios": "^0.17.1",
        "babel-preset-react": "^6.24.1",
        "body-parser": "^1.18.2",
        "bunyan": "^1.8.12",
        "ejs": "^2.5.7",
        "express": "^4.16.2",
        "joi": "^13.7.0",
        "mongodb": "^3.1.8",
        "react": "^16.5.2",
        "react-dom": "^16.5.2",
        "react-redux": "^5.0.7",
        "react-router-dom": "^4.3.1",
        "redux": "^4.0.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.2.1",
        "babel-loader": "^7.1.2",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "clean-webpack-plugin": "^0.1.17",
        "cross-env": "^5.1.3",
        "css-loader": "^0.28.7",
        "extract-text-webpack-plugin": "^3.0.2",
        "file-loader": "^1.1.6",
        "html-loader": "^0.5.1",
        "html-webpack-plugin": "^2.30.1",
        "node-sass": "^4.9.3",
        "nodemon": "^1.18.4",
        "sass-loader": "^6.0.6",
        "style-loader": "^0.19.1",
        "url-loader": "^0.6.2",
        "webpack": "^3.10.0",
        "webpack-dev-server": "^2.9.7"
    }
}
